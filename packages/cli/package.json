{
  "name": "@tddai/cli",
  "version": "1.0.0",
  "description": "TDD.ai - AI-powered TDD CLI",
  "type": "module",
  "bin": {
    "tddai": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/cli.d.ts",
      "default": "./dist/cli.js"
    }
  },
  "main": "./dist/cli.js",
  "types": "./dist/cli.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "dev": "node --loader tsx/esm src/index.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ci": "vitest run --coverage"
  },
  "dependencies": {
    "@tddai/core": "workspace:*",
    "chalk": "^5.3.0",
    "chokidar": "^4.0.3",
    "commander": "^12.0.0",
    "enquirer": "^2.4.1",
    "execa": "^9.6.0",
    "ora": "^9.0.0"
  },
  "devDependencies": {
    "@types/chokidar": "^2.1.7",
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0"
  }
}
