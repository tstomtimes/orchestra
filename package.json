{
  "name": "tdd.ai",
  "version": "1.1.0",
  "description": "AI-powered TDD workflow automation CLI",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "pnpm -r --filter './packages/*' build",
    "dev": "pnpm --filter @tddai/cli dev",
    "test": "pnpm -r --filter './packages/*' test",
    "test:watch": "pnpm -r --filter './packages/*' test:watch",
    "test:ci": "pnpm -r --filter './packages/*' test:ci",
    "lint": "eslint 'packages/**/*.ts'",
    "lint:fix": "eslint 'packages/**/*.ts' --fix",
    "format": "prettier --write 'packages/**/*.{ts,json,md}'",
    "preinstall": "node -e \"if (process.env.npm_config_user_agent && !process.env.npm_config_user_agent.includes('pnpm')) throw new Error('Use pnpm')\""
  },
  "keywords": [
    "tdd",
    "testing",
    "ai",
    "test-generation",
    "typescript"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "jest": "^30.2.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.4.5",
    "typescript": "^5.6.0",
    "vitest": "^2.1.2"
  }
}
